@model Graduation.Web.Models.FormStepTwoModel

<form class="needs-validation" action="@Url.Action("Index", "Form", new { step = 3 })" novalidate>
    <div class="row">
        <div class="col-12">
                    
            <div class="card my-3">
                <div class="card-body">
                    <h2>Τρόπος Εισαγωγής</h2>
                    
                    <div class="input-group my-3">
                        <span class="input-group-text" id="studyType-at">Τρόπος Εισαγωγής</span>
                        <select id="QualificationType" class="form-select" data-form-select-other-textby="QualificationTypeText" aria-label="Τρόπος Εισαγωγής"
                            aria-describedby="studyType-at"  required>
                            <option selected disabled value="">Παρακαλώ επίλεξε</option>
                            
                            @foreach (var type in this.Model.QualificationTypes)
                            {
                                <option value="@type.Name">@type.Name</option>
                            }
                            
                            <option value="other">Άλλο</option>
                            </select>
                        <div class="invalid-feedback">Συμπληρώστε τον τρόπο εισαγωγής.</div>
                    </div>
                    
                    <div class="input-group my-3 d-none">
                        <span class="input-group-text" id="studyType-other-at">Άλλο (γράψτε)</span>
                        <textarea id="QualificationTypeText" class="form-control" rows="3" placeholder="Άλλο (γράψτε)" aria-label="Άλλο (γράψτε)"
                            aria-describedby="studyType-other-at" required></textarea>
                        <div class="invalid-feedback">Συμπληρώστε τον τρόπο εισαγωγής.</div>
                    </div>
                    
                    <div class="input-group my-3">
                        <span class="input-group-text" id="study-start-at">Έτος Εισαγωγής</span>
                        <input id="QualificationYear" type="tel" class="form-control" placeholder="Έτος Εισαγωγής" aria-label="Έτος Εισαγωγής"
                            aria-describedby="study-start-at" required pattern="20[0-9]{2}">
                        <div class="invalid-feedback">Συμπληρώστε το έτος εισαγωγής.</div>
                    </div>
                    
                </div>
            </div>

        </div>
    
    </div>
    <button type="submit" class="btn btn-block btn-primary">Επόμενο Βήμα</button>
</form>